<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="uni.miskolc.ips.ilona.measurement.persist.mappers.MeasurementMapper">
     
    <resultMap type="Coordinate" id="CoordinateResultMap">
		<result property="x" column="relX" />
		<result property="y" column="relY" />
		<result property="z" column="relZ" />
	</resultMap>
	
    <resultMap type="Zone" id="ZoneResultMap">
		<id property="id" column="zoneId" javaType="UUID" jdbcType="VARCHAR"
			typeHandler="UUIDTypeHandler" />
		<result property="name" column="name" />
	</resultMap>

    
	<resultMap type="Position" id="PositionResultMap">
		<id property="id" column="posId" javaType="UUID" jdbcType="VARCHAR"	typeHandler="UUIDTypeHandler" />
		<!--  <association property="zoneId" resultMap="ZoneResultMap" /> -->
		<association property="coordinate" javaType="Coordinate">
		    <result property="x" column="coord_X"/>
		    <result property="y" column="coord_Y"/>
		    <result property="z" column="coord_Z"/>
		</association>
		<association property="zone" resultMap="ZoneResultMap"/>
	</resultMap>
	 
	<resultMap type="Measurement" id="MeasurementResultMap">
	    <id property="id" column="measId" javaType="UUID" jdbcType="VARCHAR"	typeHandler="UUIDTypeHandler"/>
	    <result property="timestamp" column="measTimestamp"/>
	     
	    <association property="magnetometer" javaType="Magnetometer">
	        <result property="xAxis" column="magnetometerX"/>
	        <result property="yAxis" column="magnetometerY"/>
	        <result property="zAxis" column="magnetometerZ"/>
	        <result property="radian" column="magnetometerRadian"/>
	    </association>
	    
	    <association property="gpsCoordinates" javaType="GPSCoordinate">
	        <result property="latitude" column="gpsLatitude"/>
	        <result property="longitude" column="gpsLongitude"/>
	        <result property="altitude" column="gpsAltitude "/>
	    </association>
	     
	    
	    <association property="position" column="posId" javaType="Position" select="selectPositionById"/>
	    <association property="bluetoothTags" javaType="BluetoothTags">
	        <association property="tags" column="measId" select="selectBTTagsForMeasurement"/>
	    </association>
	    
	    <association property="wifiRSSI" javaType="WiFiRSSI">
	        <association property="rssiValues" column="measId" select="selectWiFiRSSIForMeasurement"/>
	    </association>
	    
	    <!-- 
	    <association property="rfidtags" javaType="RFIDTags">
	    	<association property="tags" column="measId" select="selectRFIDTagsForMeasurement"/>
	    </association>
	     -->
	    
	</resultMap >
	
	
	<!--  Selects -->
	
	<select id="selectPositionById" resultMap="PositionResultMap" parameterType="String">
		select * from Position p inner join Zone z on z.zoneId = p.zoneId 
		where p.posId like #{id};
	</select>
	
	<select id="selectBTTagsForMeasurement" resultType="String" parameterType="String">
	    select btDeviceId from BluetoothTags where measId = #{measId};
	</select>
	
	 
	<select id="selectWiFiRSSIForMeasurement" resultType="HashMap" parameterType="String">
	    select ssid, rssi from WIFIRSSI where measId = #{measId};
	</select>
	
	
	
	<select id="selectRFIDTagsForMeasurement" resultType="_byte[]" parameterType="String">
	    select rfidTag from RFIDTags where measId = #{measId};
	</select>
	
	
	<!-- TODO RFID Tags -->
	<!-- 
	<select id="selectRFIDTagsForMeasurement" resultType="byte" parameterType="String">
	    select rfidTag from RFIDTags where measId = #{measId};
	</select>
	 -->
	<select id="selectMeasurements" resultMap="MeasurementResultMap">
	    select * from Measurement;
	</select>
	
	<!-- TODO -->
	
	<insert id="insertMeasurement">
		insert into Measurement values(
		#{id, typeHandler=UUIDTypeHandler, jdbcType=VARCHAR},
		#{timestamp},
		#{magnetometer.xAxis},
		#{magnetometer.yAxis},
		#{magnetometer.zAxis},
		#{magnetometer.radian},
		#{gpsCoordinates.latitude},
		#{gpsCoordinates.longitude},
		#{gpsCoordinates.altitude},
		#{position.id, typeHandler=UUIDTypeHandler, jdbcType=VARCHAR}
		);
	</insert>
	
	<insert id="insertWiFiRSSI4Measurement">
		insert into WIFIRSSI values (
			#{ssid},
			#{rssi},
			#{measId}
		);
	</insert>
	
	<insert id="insertBTDevice4Measurement">
	insert into BluetoothTags values (
		#{btDeviceId},
		#{measId}	
	);
	</insert>

